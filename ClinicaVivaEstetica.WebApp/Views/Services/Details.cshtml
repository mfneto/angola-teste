@using System.Linq;
@model List<ServiceResult>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
            <th style="width: 30%">Nome</th>
            <th style="width: 15%">Permite Metade do Tempo?</th>
            <th style="width: 25%"></th>
        </tr>
        </thead>
        <tbody>
        @if (Model?.Any() == true)
        {
            foreach (ServiceResult service in Model)
            {
                <tr>
                    <td>@service.Name</td>
                    <td>@(service.AllowHalfTime ? "Sim" : "Não")</td>
                    <td>
                        <a class="grid-action-link" href="/Services/Edit/@service.ServiceId"><i class="glyphicon glyphicon-pencil text-dark"></i></a> |
                        <a class="grid-action-link" href="#" data-href="/Services/Delete/@service.ServiceId" data-toggle="modal" data-target="#confirm-delete"><i class="glyphicon glyphicon-remove text-danger"></i></a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr *ngIf="users.length === 0"><td colspan="3" style="text-align: center">Nenhum registro encontrado!</td></tr>
        }
        </tbody>
    </table>
</div>